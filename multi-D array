#include <stdio.h>

int main() {
    int rows, cols;

    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    int arr[rows][cols];
    
    printf("Enter elements of the matrix (%d x %d):\n", rows, cols);
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    printf("\nMatrix you entered:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
    
    printf("\nRow sums:\n");
    for (int i = 0; i < rows; i++) {
        int rowSum = 0;
        for (int j = 0; j < cols; j++) {
            rowSum += arr[i][j];
        }
        printf("Row %d sum = %d\n", i + 1, rowSum);
    }

    printf("\nColumn sums:\n");
    for (int j = 0; j < cols; j++) {
        int colSum = 0;
        for (int i = 0; i < rows; i++) {
            colSum += arr[i][j];
        }
        printf("Column %d sum = %d\n", j + 1, colSum);
    }

    if (rows == cols) {
        int mainDiag = 0, secDiag = 0;
        for (int i = 0; i < rows; i++) {
            mainDiag += arr[i][i];
            secDiag += arr[i][rows - i - 1];
        }
        printf("\nMain diagonal sum = %d\n", mainDiag);
        printf("Secondary diagonal sum = %d\n", secDiag);
    } else {
        printf("\nDiagonal sums not possible (matrix not square).\n");
    }

    printf("\nMatrix after row-wise reverse:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = cols - 1; j >= 0; j--) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
