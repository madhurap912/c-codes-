#include <stdio.h>

int main() {
    int a[10][10], b[10][10], result[10][10];
    int r, c, i, j, k, choice;

    printf("Enter the number of rows and columns: ");
    scanf("%d %d", &r, &c);

    printf("Enter elements of Matrix A (%d x %d):\n", r, c);
    for (i = 0; i < r; i++) {
        for (j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    printf("Enter elements of Matrix B (%d x %d):\n", r, c);
    for (i = 0; i < r; i++) {
        for (j = 0; j < c; j++) {
            scanf("%d", &b[i][j]);
        }
    }

    do {
        printf("\n--- Menu ---\n");
        printf("1. Addition\n");
        printf("2. Subtraction\n");
        printf("3. Multiplication\n");
        printf("4. Transpose of Matrix A\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: // Addition
                printf("\nResult of Addition:\n");
                for (i = 0; i < r; i++) {
                    for (j = 0; j < c; j++) {
                        result[i][j] = a[i][j] + b[i][j];
                        printf("%d ", result[i][j]);
                    }
                    printf("\n");
                }
                break;

            case 2: // Subtraction
                printf("\nResult of Subtraction:\n");
                for (i = 0; i < r; i++) {
                    for (j = 0; j < c; j++) {
                        result[i][j] = a[i][j] - b[i][j];
                        printf("%d ", result[i][j]);
                    }
                    printf("\n");
                }
                break;

            case 3: // Multiplication
                if (r != c) {
                    printf("Multiplication not possible (matrices must be square).\n");
                } else {
                    printf("\nResult of Multiplication:\n");
                    for (i = 0; i < r; i++) {
                        for (j = 0; j < c; j++) {
                            result[i][j] = 0;
                            for (k = 0; k < c; k++) {
                                result[i][j] += a[i][k] * b[k][j];
                            }
                            printf("%d ", result[i][j]);
                        }
                        printf("\n");
                    }
                }
                break;

            case 4: // Transpose
                printf("\nTranspose of Matrix A:\n");
                for (i = 0; i < c; i++) {
                    for (j = 0; j < r; j++) {
                        printf("%d ", a[j][i]);
                    }
                    printf("\n");
                }
                break;

            case 5:
                printf("Exiting program...\n");
                break;

            default:
                printf("Invalid choice! Try again.\n");
        }

    } while (choice != 5);

    return 0;
}
